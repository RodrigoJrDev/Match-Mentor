<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/background_gradient"
    tools:context=".view.CreateUserActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Criação da conta - Aluno"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textFontWeight="700"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp" />

            <TextView
                android:id="@+id/labelEscolhaFoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Escolha sua foto de perfil"
                android:layout_gravity="center_horizontal"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imageViewUserPhoto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_camera"
                android:background="@drawable/circle_background"
                android:clipToOutline="true"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/buttonChoosePhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Escolher Foto"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#1A188A"
                android:background="@drawable/rounded_button_background_white"
                android:padding="12dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/labelNomeAluno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Nome do Aluno"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/textNomeAluno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rounded_background"
                android:fontFamily="@font/poppins_medium"
                android:hint="Nome do Aluno"
                android:inputType="text"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/labelSobrenomeAluno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Sobrenome do Aluno"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/textSobrenomeAluno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rounded_background"
                android:fontFamily="@font/poppins_medium"
                android:hint="Sobrenome do Aluno"
                android:inputType="text"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/labelEmailAluno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="E-mail"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/textEmailAluno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rounded_background"
                android:fontFamily="@font/poppins_medium"
                android:hint="Digite seu e-mail"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/labelIdadeAluno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Idade"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/textIdadeAluno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rounded_background"
                android:fontFamily="@font/poppins_medium"
                android:hint="Idade"
                android:inputType="number"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/labelCidadeAluno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Cidade"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/textCidadeAluno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rounded_background"
                android:fontFamily="@font/poppins_medium"
                android:hint="Cidade"
                android:inputType="text"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/labelProfissaoAluno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Profissão"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/textProfissaoAluno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rounded_background"
                android:fontFamily="@font/poppins_medium"
                android:hint="Profissão"
                android:inputType="text"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/labelDescricaoAluno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Descrição"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/textDescricaoAluno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rounded_background"
                android:fontFamily="@font/poppins_medium"
                android:hint="Descrição"
                android:inputType="text"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/labelAreaDeInteresse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Área de Interesse"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/textAreaDeInterresse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rounded_background"
                android:fontFamily="@font/poppins_medium"
                android:hint="Área de Interesse"
                android:inputType="text"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/labelSenhaAluno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Senha"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/textSenhaAluno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rounded_background"
                android:fontFamily="@font/poppins_medium"
                android:hint="Senha"
                android:inputType="textPassword"
                android:padding="12dp"
                android:layout_marginBottom="32dp" />

            <Button
                android:id="@+id/btnCadastrarAluno"
                style="@style/AppButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cadastrar conta"
                android:textColor="#1A188A"
                android:background="@drawable/rounded_button_background_white"
                android:padding="16dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
