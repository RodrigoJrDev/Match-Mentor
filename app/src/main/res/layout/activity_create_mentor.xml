<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/background_gradient"
    tools:context=".view.CreateUserActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Criação da conta - Mentor"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textFontWeight="700"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp" />

            <TextView
                android:id="@+id/labelEscolhaFoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Escolha sua foto de perfil"
                android:layout_gravity="center_horizontal"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imageViewUserPhoto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_camera"
                android:background="@drawable/circle_background"
                android:clipToOutline="true"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/buttonChoosePhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Escolher Foto"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#1A188A"
                android:background="@drawable/rounded_button_background_white"
                android:padding="12dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/labelNomeMentor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Nome do Mentor"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/textNomeMentor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rounded_background"
                android:fontFamily="@font/poppins_medium"
                android:hint="Nome do Mentor"
                android:inputType="text"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/labelEmailMentor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="E-mail"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/textEmailMentor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rounded_background"
                android:fontFamily="@font/poppins_medium"
                android:hint="Digite seu e-mail"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/labelIdadeMentor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Idade"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/textIdadeMentor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rounded_background"
                android:fontFamily="@font/poppins_medium"
                android:hint="Idade"
                android:inputType="number"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/labelCidadeMentor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Cidade"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/textCidadeMentor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rounded_background"
                android:fontFamily="@font/poppins_medium"
                android:hint="Cidade"
                android:inputType="text"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/labelProfissaoMentor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Profissão"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/textProfissaoMentor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rounded_background"
                android:fontFamily="@font/poppins_medium"
                android:hint="Profissão"
                android:inputType="text"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/labelDescricaoPessoalMentor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Descrição Pessoal"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/textDescricaoPessoalMentor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rounded_background"
                android:fontFamily="@font/poppins_medium"
                android:hint="Descrição Pessoal"
                android:inputType="text"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/labelAreaDeAtuacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Área de Atuação"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/textAreaDeAtuacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rounded_background"
                android:fontFamily="@font/poppins_medium"
                android:hint="Área de Atuação"
                android:inputType="text"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/labelDescricaoProfissaoMentor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Fale sobre sua profissão"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/textDescricaoProfissaoMentor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rounded_background"
                android:fontFamily="@font/poppins_medium"
                android:hint="Fale sobre sua profissão"
                android:inputType="text"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/labelSenhaMentor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Senha"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/textSenhaMentor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rounded_background"
                android:fontFamily="@font/poppins_medium"
                android:hint="Senha"
                android:inputType="textPassword"
                android:padding="12dp"
                android:layout_marginBottom="32dp" />

            <Button
                android:id="@+id/btnCadastrarMentor"
                style="@style/AppButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cadastrar conta"
                android:textColor="#1A188A"
                android:background="@drawable/rounded_button_background_white"
                android:padding="16dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

